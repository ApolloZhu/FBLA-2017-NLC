use_frameworks!

target 'FBLA' do
  platform :ios, '8.0'
  
  # Layout
  pod 'SnapKit'

  # Control
  pod 'PKHUD'
  pod 'MaterialKit', :git => 'https://github.com/ApolloZhu/MaterialKit.git'
  pod 'Eureka'
  pod 'ImageRow'
  pod 'VTAcknowledgementsViewController'
  pod 'JSQMessagesViewController'

  # Util
  pod 'Kingfisher'
  pod 'SwiftyJSON'

  # Data
  pod 'GooglePlaces'
  pod 'GooglePlacePicker'
  pod 'GoogleMaps'

  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  pod 'Firebase/Storage'
  pod 'Firebase/DynamicLinks'

  pod 'GoogleSignIn'
  
  pod 'FBSDKCoreKit'
  pod 'FBSDKLoginKit'

  # Transaction
  pod 'Braintree'
  pod 'Braintree/Apple-Pay'
  
end
